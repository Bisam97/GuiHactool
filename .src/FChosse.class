' Gambas class file

Private $form As Dump

Public Sub Form_Open()


  GridView1.AddColumn("Path", -1)
  GridView1.AddColumn("Size")


End

Public Sub setData(r As Collection, form As Dump)

  Dim aPath As String[]
  Dim aSize As Long[]
  Dim l As Long
  Dim backup As Long[]
  Dim row As Integer

  $form = form
  aSize = r["Size"]
  backup = aSize.Copy()

  aPath = r["Path"]


  For Each l In aSize.Sort()
    ' For Each l In aSize
    If backup.Find(l) > -1 Then
      row = backup.Find(l)
      GridView1.Rows.Insert(0)
      GridView1[0, 0].RichText = aPath[row]
      GridView1[0, 1].RichText = l
      backup.Delete(row)
      aPath.Delete(row)
    Else
      Print l & " was not found"
    Endif
  Next

End

Public Sub GridView1_Click()

  Dim row As Integer

  row = GridView1.Row
  Debug row
  $form.setData(GridView1[row, 0].RichText)
  'Me.Close

End
